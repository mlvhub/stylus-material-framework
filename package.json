{
  "name": "stylus-material-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^8.1.3",
    "browserify-istanbul": "^0.1.4",
    "coffee-script": "^1.9.0",
    "coffeeify": "^1.0.0",
    "hashmark": "^2.0.1",
    "http-server": "^0.7.4",
    "istanbul": "^0.3.5",
    "jade": "^1.9.2",
    "jasmine-core": "^2.2.0",
    "karma": "^0.12.31",
    "karma-browserify": "^3.0.1",
    "karma-coverage": "^0.2.7",
    "karma-jasmine": "^0.3.5",
    "karma-phantomjs-launcher": "^0.1.4",
    "lodash": "^3.1.0",
    "minifyify": "^6.1.0",
    "mithril": "^0.1.30",
    "mithril-query": "^0.4.4",
    "moment": "^2.9.0",
    "nodemon": "^1.3.7",
    "parallelshell": "^1.0.4",
    "rimraf": "^2.2.8",
    "stylus": "^0.50.0"
  },
  "scripts": {
    "clean": "rimraf dist/assets",
    "prebuild": "npm run clean ",
    "build": "npm run build:scripts  && npm run build:styles  && npm run build:markup && npm run build:assets",
    "build:assets": "cp -R app/assets/ dist/assets/",
    "build:scripts": "browserify -d -t coffeeify --extension='.coffee' app/scripts/main.coffee -o dist/main.js && hashmark  -l 8 -m assets.json dist/main.js 'dist/{name}{hash}{ext}'",
    "build:styles": "stylus -u jeet -u nib app/styles/main.styl -m -o dist/ && hashmark  -l 8 -m assets.json dist/main.css 'dist/{name}{hash}{ext}'",
    "build:markup": "jade app/index.jade --obj assets.json -o dist",
    "test": "karma start -singleRun",
    "watch": "parallelshell 'npm run watch:test ' 'npm run watch:build '",
    "watch:test": "karma start",
    "watch:build": "nodemon -q -w app/ --ext '.' --exec 'npm run build'",
    "serve": "browser-sync start --config 'bs-config.js'",
    "dev": "npm run serve && npm run watch"
  }
}
